@model IEnumerable<Rental>

@{ 
    ViewData["Title"] = "List of Rentals";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="row">
    <div class="col-md-12">

        <table class="table">
            <thead>
                <tr>
                    
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) 
                { 
                <tr>
                    
                    <td class="align-middle">
                        <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id=""><i class="bi bi-pencil-square"></i></a> |
                        <a class="btn btn-outline-info" asp-action="Details" asp-route-id=""><i class="bi bi-eye"></i></a> |
                        <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id=""><i class="bi bi-trash"></i></a>
                    </td>
                </tr>
                }
            </tbody>
            
        </table>

    </div>
</div>
<div style=" position: fixed; right:25px; bottom:65px  " class="text-white">
    <a asp-controller="" asp-action="Create" class="btn btn-success"> <i class="bi bi-plus-circle"></i> Add New  </a>
</div>

