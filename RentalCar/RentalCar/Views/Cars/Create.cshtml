@model NewCarVM
@using RentalCar.Data;

@{
    ViewData["Title"] = "Create a new car";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h4>Create a new car</h4>
        </p>

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="StartDate" class="control-label"></label>
                                <input asp-for="StartDate" type="date" class="form-control" />
                                <span asp-validation-for="StartDate" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="EndDate" class="control-label"></label>
                                <input asp-for="EndDate" type="date" class="form-control" />
                                <span asp-validation-for="EndDate" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Price" class="control-label"></label>
                                <input asp-for="Price" type="number" class="form-control" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ImageURL" class="control-label"></label>
                                <input asp-for="ImageURL" class="form-control" />
                                <span asp-validation-for="ImageURL" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="RentalId" class="control-label"></label>
                                <select asp-for="RentalId" class="form-control" asp-items="ViewBag.Rentals"></select>
                                <span asp-validation-for="RentalId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CarCategory" class="control-label"></label>
                                <select asp-for="CarCategory" class="form-control" asp-items="Html.GetEnumSelectList<CarCategory>()"></select>
                                <span asp-validation-for="CarCategory" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                  <label asp-for="BrandId" class="control-label"></label>
                                  <select asp-for="BrandId" class="form-control" asp-items="ViewBag.Brands"></select>
                                  <span asp-validation-for="BrandId" class="text-danger"></span>  
                            </div>
                            <div class="form-group">
                                <!-- <label asp-for="ActorIds" class="control-label"></label>
                                 <select asp-for="ActorIds" class="form-control" asp-items="ViewBag.Actors" multiple></select>
                                 <span asp-validation-for="ActorIds" class="text-danger"></span>  -->
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Description" class="control-label"></label>
                                <textarea asp-for="Description" class="form-control"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div @*class="col-md-4 offset-4 text-center"*@>
                        <img id="ImageUrlPreview" style="height:250px; width:250px;" />
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show all</a>
                    </div>

                    <div style="height:100px;">

                    </div>
                </form>

            </div>
        </div>

    </div>
</div>

@section Scripts{
    <script>
$("#ImageURL").on("change", function () {
            var output = document.getElementById("ImageUrlPreview");
            output.src = $(this).val();
        })</script>
}